            margin-top: 10px;
            padding: 10px 15px;
            font-weight: bold;
        }

        .main > div > h4 {
            color: #cfcfcf;
            font-family: 'Noto Serif KR', sans-serif;
            font-weight: bold;
        }

        .main > div > h1 {
            font-family: 'Black Han Sans', sans-serif;
        }

        .main > div > * {
            margin: 10px 0;
        }

        .main > div {
            display: block;
            margin: 0 auto;
            text-align: center;
            color: white;
            background: rgba(0,0,0,0.7);
            padding: 10px 50px;
            border-radius: 50px;
            z-index: 1;
        }

        .main {
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-self: center;
            width: 100dvw;
            height: 100dvh;
            background: none;
            position: relative;
        }

        .main::before {
            background-image: url('/images/bg.png');
            background-repeat: no-repeat;
            background-position: 15% 50%;
            background-size:cover;
